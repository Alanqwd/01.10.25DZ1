<Window x:Class="_01._10._25DZ1.Case"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01._10._25DZ1"
        mc:Ignorable="d"
        Title="Case" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Background="#FDF5DF" Grid.Row="0" TextAlignment="Center" FontSize="30"    Text="Новое дело"></TextBlock>

        <StackPanel Background="#FDF5DF" Grid.Row="1" >

            <TextBlock Background="#FDF5DF" FontSize="12" Text="Название:" />
            <TextBox Name = "titleToDo" Width="390" HorizontalAlignment="Center"  Margin="0, 10"></TextBox>
            <TextBlock FontSize="12" Text="Выполнить до:"/>
            <DatePicker Name = "dateToDo" Width="390" HorizontalAlignment="Center"  Margin="0, 10" ></DatePicker>
            <TextBlock FontSize="12" Text="Описание:"/>
            <TextBox Name = "descriptionToDo" Height="20" Width="390" HorizontalAlignment="Center" Margin="0, 10" MaxLines="10" MinLines="10" >Описания нет:</TextBox>


            <Button Background="#5EBEC4" Height="40" Width="120" HorizontalAlignment="Center" Content="Сохранить дело"></Button>
        </StackPanel>




    </Grid>
</Window>
