<Window x:Class="_01._10._25DZ1.Case"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01._10._25DZ1"
        mc:Ignorable="d"
        Title="Добавление нового дела"
        Height="450" Width="400"
        Icon="/Image/icon.png">


    <Window.Resources>
        <Style x:Key="HeaderStyle">
            <Setter Property="Control.FontFamily" Value="Cascadia Mono"></Setter>
            <Setter Property="Control.FontSize" Value="26"></Setter>
            <Setter Property="Control.FontWeight" Value="Bold"></Setter>
            <Setter Property="Control.Padding" Value="5"></Setter>
            <Setter Property="Control.Margin" Value="5"></Setter>
        </Style>
        <Style x:Key="Item">
            <Setter Property="ItemsControl.BorderThickness" Value="1,5"></Setter>
            <Setter Property="ItemsControl.BorderBrush" Value="#5ebec4"></Setter>

        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock HorizontalAlignment="Center" Style="{StaticResource HeaderStyle}" Foreground="#5ebec4">Новое дело</TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="1"  Name ="groupBoxToDo"  Margin="5" Background="#FDF5DF" >
        <StackPanel Margin="5" >
                <TextBlock FontSize="12" Text="Название:"/>
                <TextBox Style="{StaticResource Item}"  Name = "titleToDo"  Margin="0, 10"  HorizontalScrollBarVisibility="Auto">Список 1</TextBox>
            
            <TextBlock FontSize="12" Text="Выполнить до:"/>
            
                <DatePicker>
                    <DatePicker.CalendarStyle>
                    <Style TargetType="Calendar">
                        <Setter Property="BorderThickness" Value="1.5"/>
                        <Setter Property="BorderBrush" Value="#5EBEC4"/>
                        <Setter Property="Background" Value="#FFFDFAF1"/>
                    </Style>
                </DatePicker.CalendarStyle>
                </DatePicker>

                <TextBlock FontSize="12" Text="Описание:"/>
                <TextBox AcceptsTab="True" AcceptsReturn="True" Style="{StaticResource Item}" Name = "descriptionToDo"  Margin="0, 10" MaxLines="10" MinLines="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto">Описания нет</TextBox>
        </StackPanel>
    </StackPanel>

    <Button  Grid.Row="2" Name="buttonSave" Click="SaveCase" Content="Сохранить дело" Background="#5EBEC4" Height="30" Width="100" Margin="5"/>
    </Grid>
    
    
</Window>
